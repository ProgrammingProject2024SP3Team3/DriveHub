@{
    ViewData["Title"] = "Make a Booking";
}

<h1 class="text-center">Make a Booking</h1>
<p class="text-center">Make a new booking for Suzi the Suzuki Hatch</p>

<div class="mb-3" style="background-color: #f8f9fa;">
    <div class="text-center p-2 fw-bold mb-3 fs-4" style="background-color: #FFBA17;">Booking Details
    </div>

    <div class="d-flex align-items-center mb-3">
        <i class="bi bi-geo-alt-fill fs-2 me-3"></i>
        <div>
            <p class="mb-0">Pickup DriveHub Orion Pod</p>
            <small>Main St Near the Station</small>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Car:</label>
        <div class="form-control">Suzi the Suzuki Hatch</div>
        <a href="/Bookings/Search" class="small text-end d-block mt-1">Find another car close by</a>
    </div>

    <div class="row g-3">
        <div>
            <label for="bookingStart" class="form-label mb-0">Booking Start</label>
        </div>
        <div class="col-md-6">
            <input type="date" class="form-control" id="bookingStart" value="2024-09-19" />
        </div>
        <div class="col-md-6">
            <input type="time" class="form-control" id="bookingTimeStart" value="13:30" />
        </div>
        <div>
            <label for="bookingEnd" class="form-label">Booking End</label>
        </div>
        <div class="col-md-6">
            <input type="date" class="form-control" id="bookingEnd" value="2024-09-19" />
        </div>
        <div class="col-md-6">
            <input type="time" class="form-control" id="bookingTimeEnd" value="17:30" />
        </div>
    </div>

    <div class="mt-3">
        <label for="returnPod" class="form-label">Return Pod</label>
        <select class="form-select" id="returnPod">
            <option selected>Odysseus Pod, North Fitzroy</option>
            <option value="1">Apollo Pod, South Yarra</option>
            <option value="2">Athena Pod, Carlton</option>
        </select>
    </div>
</div>

<div class="booking-section mb-3">
    <div class="text-center p-2 fw-bold fs-4" style="background-color: #FFBA17;">Booking Cost</div>
    <div class="cost-section text-center bg-white p-3" style="border: 1px solid #dee2e6;">
        <p class="mb-0">Per Hour:</p>
        <p class="fw-bold fs-1">$30/hr</p>
        <hr />
        <p class="mb-0">Total Cost:</p>
        <p class="fw-bold fs-1 mb-0">$120</p>
    </div>
</div>

<a href="/Bookings/Details" class="btn confirm-btn mb-4 col-12 fw-bold text-white fs-4"
    style="background-color: #00A8E8;">Confirm and
    Pay</a>

