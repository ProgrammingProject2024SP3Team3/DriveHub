@{
    ViewData["Title"] = "Make a Booking";
}

<h1>Make a Booking</h1>

<p>Get the <strong>best</strong> experience at an <strong>affordable</strong> price.</p>

<div class="card mb-4">
    <div class="card-header bg-primary text-white">Booking Details</div>
    <div class="card-body">
        <form>
            <div class="mb-3">
                <label for="carSelection" class="form-label">Car*</label>
                <select class="form-select" id="carSelection">
                    <option selected>Tully the Yaris</option>
                </select>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="bookingStart" class="form-label">Booking Start*</label>
                    <input type="datetime-local" class="form-control" id="bookingStart" value="2024-09-21T12:30">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="bookingEnd" class="form-label">Booking End*</label>
                    <input type="datetime-local" class="form-control" id="bookingEnd" value="2024-09-22T17:30">
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header bg-primary text-white">Trip Cost</div>
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <span>Charged on booking confirmation</span>
            <span>$0.10</span>
        </div>
        <div class="d-flex justify-content-between mt-2">
            <span>Charged after trip has completed</span>
            <span>$12 + $0.48/km</span>
        </div>
        <small class="text-muted d-block mt-2">All figures are inclusive of GST, if applicable.</small>
    </div>
</div>

<div class="d-grid gap-2 my-4">
    <a href="/Bookings/Details" class="btn btn-primary btn-lg">Continue</a>
</div>
