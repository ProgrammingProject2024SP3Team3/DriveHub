@{
    ViewData["Title"] = "DriveHub";
}

<!-- Hero Section -->
<header class="hero-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8">
                <div class="text-center text-white">
                    <h1 class="hero-heading mb-5">Find, Book, and Drive – Anytime, Anywhere!</h1>
                </div>
                <div class="hero-search-bar">
                    <a asp-action="Index" asp-controller="Bookings" class="btn btn-primary btn-lg">Find a car near you!</a>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Services Section -->
<section class="services-section text-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="service-item mx-auto">
                    <i class="bi bi-person-check"></i>
                    <h3 class="service-heading">Register & Verify</h3>
                    <p class="service-description lead">Create an account and verify your identity.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="service-item mx-auto">
                    <i class="bi bi-calendar-check"></i>
                    <h3 class="service-heading">Book a Car</h3>
                    <p class="service-description lead">Choose a nearby location and pick a car for the time you need.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="service-item mx-auto">
                    <i class="bi bi-geo-alt"></i>
                    <h3 class="service-heading">Drive & Return</h3>
                    <p class="service-description lead">Drive to your destination and return the car to any available location.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- QR Code Section -->
<section class="qr-section bg-white text-center">
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-lg-6 order-lg-2 qr-image" style="background-image: url('https://drivehubstorage.blob.core.windows.net/website/QR_image.png');"></div>
            <div class="col-lg-6 order-lg-1 my-auto qr-text">
                <h2>Effortless Booking with a QR Code</h2>
                <p class="lead">Experience seamless car booking with our QR code feature. Simply scan the code, reserve your vehicle, and get on the road in seconds.</p>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="call-to-action bg-dark text-white text-center py-5" id="signup">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h2 class="mb-4">Subscribe to Our Newsletter for Latest Offer!</h2>
                <form asp-action="Subscribe" method="post" class="form-subscribe">
                    <div class="input-group">
                        <input type="email" class="form-control form-control-lg" id="emailAddressBelow" name="emailAddressBelow" placeholder="Email Address" required>
                        <button class="btn btn-primary btn-lg" id="submitButton" type="submit">Subscribe</button>
                        <div class="invalid-feedback">Please enter a valid email address.</div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    window.addEventListener('DOMContentLoaded', function () {
        const heroHeading = document.querySelector('.hero-heading');

        // A check if heroHeading exists so it doesn't error on other pages
        if (heroHeading) {
            setTimeout(() => {
                heroHeading.classList.add('scrolled');
            }, 500);
        }

        const fadeInOnScroll = () => {
            const scrollPosition = window.scrollY;
            const opacity = Math.min(1, scrollPosition / (windowHeight / 2));

            heroHeading.style.opacity = opacity;

            if (scrollPosition <= windowHeight) {
                heroHeading.style.transition = 'opacity 0.5s ease-out';
            }
        };

        window.addEventListener('scroll', fadeInOnScroll)
    });
</script>

