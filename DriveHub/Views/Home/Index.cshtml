@{
    ViewData["Title"] = "DriveHub";
}

<!-- Start of the Header Section -->
<header class="masthead">
    <div class="container position-relative">
        <div class="row justify-content-center">
            <div class="col-xl-8">
                <div class="text-center text-white">
                    <!-- Page heading -->
                    <h1 class="mb-5">Find, Book, and Drive – Anytime, Anywhere!</h1>
                </div>
                <div class="search-bar">
                    <input type="text" class="form-control-lg" placeholder="Search for a car">
                    <button class="btn btn-primary btn-lg">Search</button>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- End of the Header Section -->

 <!-- Icons Grid-->
<section class="features-icons bg-light text-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex"><i class="bi-person-check m-auto text-primary"></i></div>
                    <h3>Register & Verify</h3>
                    <p class="lead mb-0">Create an account and verify your identity.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex"><i class="bi-calendar-check m-auto text-primary"></i></div>
                    <h3>Book a Car</h3>
                    <p class="lead mb-0">Choose a nearby location and pick a car for the time you need.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-0 mb-lg-3">
                    <div class="features-icons-icon d-flex"><i class="bi-geo-alt m-auto text-primary"></i></div>
                    <h3>Drive & Return</h3>
                    <p class="lead mb-0">Drive to your destination and return the car to any available location.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Image Showcases-->
<section class="showcase">
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-lg-6 order-lg-2 text-white showcase-img"></div>
            <div class="col-lg-6 order-lg-1 my-auto showcase-text">
                <h2>Effortless Booking with a QR Code</h2>
                <p class="lead mb-0">Experience seamless car booking with our QR code feature. Simply scan the code, reserve your vehicle, and get on the road in seconds. It's quick, secure, and hassle-free!</p>
            </div>
        </div>
</section>

<!-- Call to Action-->
<section class="call-to-action text-white text-center" id="signup">
    <div class="container position-relative">
        <div class="row justify-content-center">
            <div class="col-xl-6">
                <h2 class="mb-4">Subscribe to Our Newsletter!</h2>

                <form asp-action="Subscribe" method="post" class="form-subscribe">
                    <div class="row">
                        <div class="col">
                            <input class="form-control form-control-lg" id="emailAddressBelow" name="emailAddressBelow" type="email" placeholder="Email Address" required />
                            <div class="invalid-feedback text-white">Please enter a valid email address.</div>
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-primary btn-lg" id="submitButton" type="submit">Subscribe</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>