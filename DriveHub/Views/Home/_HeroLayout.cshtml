<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DriveHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/master.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DriveHub.styles.css" asp-append-version="true" />
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css2?family=Protest+Guerrilla&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" type="text/css" />
</head>
<body>
   <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="https://drivehubstorage.blob.core.windows.net/website/DriveHubLogoNoBackground.png" alt="DriveHub Logo" width="80" height="80" class="d-inline-block align-text-middle">
                <span class="drive-text">Drive</span><span class="hub-text">Hub</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" data-bs-theme="dark"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Center the main links -->
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav text-light" style="text-decoration: none;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav text-light" style="text-decoration: none;" asp-area="" asp-controller="Bookings" asp-action="Index">Bookings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav text-light" style="text-decoration: none;" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav text-light" style="text-decoration: none;" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav text-light" style="text-decoration: none;" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-dark text-white pt-4">
        <div class="container">
            <div class="row">
                <!-- Social Media Icons -->
                <div class="col-lg-6 mb-4">
                    <h5>Follow Us</h5>
                    <a href="https://facebook.com" target="_blank" class="socialmedia me-3">
                        <i class="bi bi-facebook"></i>
                    </a>
                    <a href="https://twitter.com" target="_blank" class="socialmedia me-3">
                        <i class="bi bi-twitter"></i>
                    </a>
                    <a href="https://instagram.com" target="_blank" class="socialmedia me-3">
                        <i class="bi bi-instagram"></i>
                    </a>
                    <a href="https://linkedin.com" target="_blank" class="socialmedia">
                        <i class="bi bi-linkedin"></i>
                    </a>
                </div>

                <!-- Footer Links -->
                <div class="col-lg-6 text-lg-end mb-4">
                    <h5>Quick Links</h5>
                    <a class="text-white me-3" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    <a class="text-white me-3" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                    <a class="text-white" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="copyR text-center pt-3">
                &copy; 2024 - DriveHub. All Rights Reserved.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
