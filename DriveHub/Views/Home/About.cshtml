<!-- Style Section -->
<style>
    /* Ensuring the same height for carousel images on all devices */
    .carousel-item img {
        max-width: 100%;
        height: 500px; 
        object-fit: cover; 
    }

    /* Centering the caption vertically in the middle */
    .carousel-caption {
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    /* Keeping the arrows in the middle */
    .carousel-control-prev, .carousel-control-next {
        top: 50%; /* Keep the arrows centered vertically */
        transform: translateY(-50%);
    }

    /* Adjust arrow size for smaller screens */
    @@media (max-width: 576px) {
        .carousel-item img {
            width: 100%;
            height: 400px;
            object-fit:contain; 
        }

        .carousel-caption h5 {
            font-size: 1.25rem; 
        }

        .carousel-caption p {
            font-size: 1rem; 
        }

        .carousel-caption {
            padding: 0.5rem; 
        }

        /* Make the arrows smaller for small screens */
        .carousel-control-prev-icon, .carousel-control-next-icon {
            display: none;
        }
    }
</style>