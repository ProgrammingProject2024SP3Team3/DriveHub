<style>
    /* CSS to make the image responsive */
    .responsive-image {
        width: 100%; /* Make the image span the entire width of the page */
        height: auto; /* Keep the aspect ratio */
    }

    /* Optional: Add some styling for the container */
    .hero-container {
        max-width: 100%; /* Ensures the image doesn't stretch beyond the viewport */
        overflow: hidden; /* Hides any overflow if the image is too large */
        padding: 40px;
    }
    /* Transparent text box */
    .text-box {
        position: absolute;
        top: 300px; /* Position it from the bottom of the image */
        left: 50%;
        right: 0;
        transform: translateX(-50%);
        background-color: rgba(0, 0, 0, 0.5); /* Black background with 50% transparency */
        color: white;
        padding: 30px;
        text-align: center;
        border-radius: 40px;
    }

    .smallhero-container {
        max-width: 50%;
        overflow: hidden;
    }

    .container-text-centre {
        padding: 40px;
    }

    .subhero-section {
        padding: 40px;
    }

</style>
