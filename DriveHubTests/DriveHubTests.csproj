<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>   <!-- Targeting .NET 8.0 -->
    <ImplicitUsings>enable</ImplicitUsings>     <!-- Implicitly include common namespaces -->
    <Nullable>enable</Nullable>                 <!-- Enable nullable reference types -->

    <IsPackable>false</IsPackable>              <!-- This is not a package project -->
    <IsTestProject>true</IsTestProject>         <!-- Mark this as a test project -->
  </PropertyGroup>

  <!-- Add the necessary test and mocking libraries -->
  <ItemGroup>
    <PackageReference Include="coverlet.collector" Version="6.0.0" />   <!-- For code coverage -->
    <PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="8.0.8" /> <!-- Identity for testing user management -->
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />  <!-- ASP.NET Core MVC for testing controllers -->
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="8.0.8" /> <!-- EF Core for database interactions -->
    <PackageReference Include="Microsoft.EntityFrameworkCore.InMemory" Version="8.0.8" />  <!-- In-memory database for testing -->
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.8.0" /> <!-- .NET SDK for testing -->
    <PackageReference Include="Moq" Version="4.20.72" />  <!-- Moq for mocking dependencies -->
    <PackageReference Include="xunit" Version="2.5.3" />  <!-- xUnit test framework -->
    <PackageReference Include="xunit.runner.visualstudio" Version="2.5.3" />  <!-- xUnit test runner -->
  </ItemGroup>

  <!-- Ensure CSV files in the TestData folder are copied to the output directory -->
  <ItemGroup>
    <None Update="TestData\*.csv">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <!-- Project Reference to DriveHub -->
  <ItemGroup>
    <ProjectReference Include="..\DriveHub\DriveHub.csproj" />  <!-- Adjust the path if needed -->
  </ItemGroup>

</Project>
