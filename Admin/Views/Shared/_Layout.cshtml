<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Admin</title>
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Admin.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom bg-body-tertiary box-shadow mb-3 text-white">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://drivehubstorage.blob.core.windows.net/website/DriveHubLogoNoBackground.png" alt="DriveHub Logo" width="50" height="50" class="d-inline-block align-text-middle">
                    Portal
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-body-tertiary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-body-tertiary" asp-area="" asp-controller="ApplicationUsers" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-body-tertiary" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Vehicles
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-body-tertiary" asp-area="" asp-controller="Vehicles" asp-action="Index">Vehicles</a></li>
                                <li><a class="nav-link text-body-tertiary" asp-area="" asp-controller="VehicleRates" asp-action="Index">Vehicle Rates</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-body-tertiary" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Locations
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" asp-area="" asp-controller="Sites" asp-action="Index">Sites</a></li>
                                <li><a class="nav-link" asp-area="" asp-controller="Pods" asp-action="Index">Pods</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-body-tertiary" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Bookings
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" asp-area="" asp-controller="Bookings" asp-action="Index">Bookings</a></li>
                                <li><a class="nav-link" asp-area="" asp-controller="Invoices" asp-action="Index">Invoices</a></li>
                                <li><a class="nav-link" asp-area="" asp-controller="Receipts" asp-action="Index">Receipts</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-body-tertiary" asp-area="" asp-controller="Contacts" asp-action="Index">Messages</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-body-tertiary" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - DriveHub Admin Portal - <a asp-area="" asp-controller="Home" asp-action="About">About</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
