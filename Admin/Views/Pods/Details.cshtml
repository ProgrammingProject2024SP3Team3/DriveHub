@model DriveHubModel.Pod

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Pod @Html.DisplayFor(model => model.PodName)</h4>
    <hr />
    <div class="row">
        <div class="col-xs-12 col-md-4 mb-4">
            <img class="img-fluid" src="/images/sites/@(@Model.SiteId).jpg" />
        </div>
        <div class="col-xs-12 col-md-8">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PodName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PodName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Site)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Site.SiteName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Vehicle)
                </dt>
                <dd class="col-sm-10">
                    @Model.Vehicle?.Name)
                </dd>
            </dl>
        </div>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.PodId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>