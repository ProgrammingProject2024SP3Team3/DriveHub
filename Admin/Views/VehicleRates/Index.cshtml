@model IEnumerable<DriveHubModel.VehicleRate>

@{
    ViewData["Title"] = "Vehicle rates";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EffectiveDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EffectiveDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VehicleRateId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VehicleRateId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VehicleRateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
